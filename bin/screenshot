#!/usr/bin/env sh

export DISPLAY=:0
current=$(date +%H-%M-%S-%d-%m-%Y).png
mkdir -p $HOME/Pictures

if [[ -z "${1}" ]]; then
    import -window root $HOME/Pictures/$current || exit 0 # If no argument, full screen (all monitors)
else
    import $HOME/Pictures/$current || exit 0 # Custom selection, or click a window
fi

notify-send "Screenshot saved: ${current}"
